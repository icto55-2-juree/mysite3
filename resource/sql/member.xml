<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="member">
	<typeAlias alias="MemberVo" type="com.sds.icto.mysite.domain.MemberVo" />

	<insert id="insert" parameterClass="MemberVo">
		<![CDATA[
		insert
		  into member
		values ( member_no_seq.nextval, #name#, #email#, #password#, #gender# )
		]]>  
	</insert>
	
	<select id="getMember" parameterClass="MemberVo" resultClass="MemberVo">
		<![CDATA[
		select * from member where email=#email# and password=#password#
		]]>  
	</select>
	
	<update id="updateMember" parameterClass="java.util.Map">
		<![CDATA[
		update member set name=#name#, password=#password# 
		where no=#no#
		]]>  
	</update>
</sqlMap> 
